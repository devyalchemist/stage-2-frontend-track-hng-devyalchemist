{# views/pages/tickets.twig #}
{% extends "layouts/app_layout.twig" %} {# Use the App Layout #}

{% block app_content %}
    <div class="space-y-6"> {# Removed p-6/p-8, layout adds padding #}
        {# Header with Create button #}
        <div class="flex justify-between items-center">
            <h1 class="text-3xl font-bold text-checkerr-green">Manage Tickets</h1>
            <button id="toggle-form-button"
                    class="flex items-center px-4 py-2 rounded-md text-white font-medium shadow-md transition-colors bg-checkerr-orange hover:bg-opacity-80">
                <span id="toggle-form-icon">+</span>
                <span id="toggle-form-text" class="ml-1">Create Ticket</span>
            </button>
        </div>

        {# Form Container #}
        <div id="ticket-form-container" class="hidden">
            <p>Loading form...</p>
        </div>

        {# Ticket List Container #}
        <div id="ticket-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <p class="text-gray-500 col-span-3 italic">Loading tickets...</p>
        </div>
    </div>
{% endblock %}

{% block app_scripts %}
    {# tickets.js handles form toggle, loading tickets, CRUD #}
    <script src="/js/tickets.js"></script>
{% endblock %}